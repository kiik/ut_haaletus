<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{+title}Proto Hääletus{/title}</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/app.css" />

    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>

    <link rel="shortcut icon" href="favicon.ico?v=7" />
  </head>
  <body>
    <div class="container">
      <img src="/img/placeholder.png" class="brand pull-left">

      <div class="brand-header pull-right">
        Hääletuse lõpuni: <span id="timer">123:45:67</span>
        <script>
          var h = Math.floor(Math.random()*200);
              m = Math.floor(Math.random()*60);
              s = Math.floor(Math.random()*60);

          function timer() {
            s--;
            if(s<=0) {
              m--;
              s = 60;
            }

            if(m<=0) {
              h--;
              m = 60;
            }

            $("#timer").html([h, m, s].join(":"));
            setTimeout(timer, 1000);
          } timer();

        </script>
      </div>

      <div class="clearfix"></div>

      <ul class="navi">
        <li><a href="#">Kandidaadid</a></li>
        <li><a href="#">Tulemused</a></li>
        <li><a href="#">...</a></li>
      </ul>

      <div class="navi pull-right">
        login | logout
      </div>

      <br><hr>
      <ol class="breadcrumb">
        {+breadcrumb}
        <li><a href="/">Kodu</a></li>
        {/breadcrumb}
      </ol>
    </div>

    <div class="container">
      {+body}
      <div class="col-xs-12 placeholder" style="height:400px;">
      </div>
      {/body}
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-2"></div>
          <div class="col-xs-5">
            <h5>Info</h5>
            <ul class="list-unstyled">
              <li><a href="#">E-Valimine</a></li>
              <li><a href="#">ID autentimine</a></li>
              <li><a href="#">Häälte lugemine</a></li>
              <li><a href="#">Piirkonnad</a></li>
            </ul>
          </div>
          <div class="col-xs-5">
            <h5>Kontakt</h5>
            <ul class="list-unstyled">
              <li><a href="#">Organisatsioonist</a></li>
              <li><a href="#">Kontakt</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script src="/js/app.js"></script>
  </body>
</html>
